{
    "name": "gusdeboer/opp",
    "description": "Open Payment Platform API client",
    "authors": [
        {
            "name": "Gus de Boer",
            "email": "gusdeboer93@gmail.com",
            "homepage": "https://gusdeboer.nl",
            "role": "Developer"
        }
    ],
    "keywords": [
        "open payment platform",
        "php sdk",
        "api",
        "client",
        "payment",
        "psp",
        "merchant",
        "transactions",
        "mandates",
        "charges",
        "withdrawls"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Gusdeboer\\OPP\\": "src/",
            "Tests\\": "tests/"
