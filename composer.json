    "require": {
        "php": ">=8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5",
        "symfony/serializer": "^6.2",
        "beberlei/assert": "^3.3",
        "symfony/property-access": "^6.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.15"
    }
